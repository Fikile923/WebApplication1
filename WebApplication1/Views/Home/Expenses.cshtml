@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>
<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />

    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Value
                </th>
                <th>
                    Description
                </th>
                <th>
                    Action
                </th>

            </tr>

        </thead>
        <tbody>
            <!--Interating to show the information-->
            @{
                //Since we do not know amount of information we going to display we use for loop
                foreach(var expense in Model)
                {
                    <tr>
                   
                        <td>
                        <!--T "at" is used c# and expense acts like an object-->
                        @expense.Id
                        </td>

                        <td>
                            @expense.value
                        </td>

                        <td>
                            @expense.Description
                        </td>
                        <td>
                            <a asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                            <a asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                        </td>

                    </tr>
                }
            }

        </tbody>
    </table>




</div>

